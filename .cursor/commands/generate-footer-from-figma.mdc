const updatedPayloadConfig = payloadConfig
  .replace(
    /import.*from.*\n/g,
    match => match + (match.includes('Footer/config') ? '' : footerImport)
  )
  .replace(
    /globals:\s*\[([^\]]*)\]/,
    (match, content) => {
      if (content.includes('Footer')) return match
      return \`globals: [\${content}    Footer,  // ‚Üê Footer\n  ]\`
    }
  )

