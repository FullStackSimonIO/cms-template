### Phase 2: Footer-Struktur analysieren

```typescript
// 2. Lade Figma-Details f√ºr Footer-Analyse
const figmaDetails = await mcp.getFigmaNode({
  fileKey: FIGMA_FILE_KEY,
  nodeId: footerMapping.figma.id,
})

// Analysiere Footer-Struktur
const footerStructure = {
  logo: null,
  columns: [],
  socialLinks: [],
  newsletter: false,
  copyright: null,
  legalLinks: [],
}

// Durchsuche Footer rekursiv
function analyzeFooterStructure(node, depth = 0) {
  const nameLower = node.name.toLowerCase()
  
  // Logo erkennen
  if (nameLower.includes('logo') && depth < 3) {
    footerStructure.logo = {
      id: node.id,
      name: node.name,
    }
  }
  
  // Spalten erkennen (Frames mit Listen)
  if (nameLower.includes('column') || nameLower.includes('spalte')) {
    const links = []
    if (node.children) {
      node.children.forEach(child => {
        if (child.type === 'TEXT') {
          links.push({
            id: child.id,
            text: child.characters || child.name,
          })
        }
      })
    }
    if (links.length > 0) {
      footerStructure.columns.push({
        id: node.id,
        name: node.name,
        links: links,
      })
    }
  }
  
  // Social Media Links
  if (nameLower.includes('social') || nameLower.includes('instagram') || 
      nameLower.includes('facebook') || nameLower.includes('twitter')) {
    footerStructure.socialLinks.push({
      id: node.id,
      name: node.name,
    })
  }
  
  // Newsletter
  if (nameLower.includes('newsletter') || nameLower.includes('subscribe')) {
    footerStructure.newsletter = true
  }
  
  // Copyright
  if (nameLower.includes('copyright') || nameLower.includes('¬©')) {
    footerStructure.copyright = {
      id: node.id,
      text: node.characters || node.name,
    }
  }
  
  // Legal Links (Impressum, Datenschutz, etc.)
  if (nameLower.includes('impressum') || nameLower.includes('datenschutz') || 
      nameLower.includes('agb') || nameLower.includes('legal')) {
    footerStructure.legalLinks.push({
      id: node.id,
      text: node.characters || node.name,
    })
  }
  
  // Rekursiv durch Kinder
  if (node.children && depth < 5) {
    node.children.forEach(child => analyzeFooterStructure(child, depth + 1))
  }
}

